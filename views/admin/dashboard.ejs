<style>
    /* 1. ANIMATIONS */
    @keyframes gradient-xy {
        0%, 100% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
    }
    .animate-gradient { background-size: 200% 200%; animation: gradient-xy 15s ease infinite; }
    
    /* 2. REVEAL EFFECT */
    .reveal { opacity: 0; transform: translateY(20px); transition: all 0.8s cubic-bezier(0.16, 1, 0.3, 1); }
    .reveal.active { opacity: 1; transform: translateY(0); }

    /* 3. GLASS ELEMENTS */
    .glass-card {
        background: rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(16px);
        border: 1px solid rgba(255, 255, 255, 0.05);
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    }
    .glass-input { 
        background: rgba(0, 0, 0, 0.2); 
        border: 1px solid rgba(255, 255, 255, 0.1); 
        color: white; 
        transition: all 0.3s ease;
    }
    .glass-input:focus { 
        background: rgba(0, 0, 0, 0.4); 
        border-color: #22d3ee; 
        outline: none; 
    }
    
    /* 4. SCROLLBAR */
    ::-webkit-scrollbar { width: 8px; height: 8px; }
    ::-webkit-scrollbar-track { background: #0f172a; }
    ::-webkit-scrollbar-thumb { background: #334155; border-radius: 4px; }
    ::-webkit-scrollbar-thumb:hover { background: #475569; }

    /* Fix for date inputs in dark mode */
    input[type="date"]::-webkit-calendar-picker-indicator { filter: invert(1); cursor: pointer; }
</style>

<div class="min-h-screen bg-slate-950 py-10 px-6 text-slate-200 relative overflow-x-hidden">
    
    <div class="fixed inset-0 bg-gradient-to-br from-slate-950 via-cyan-950/20 to-slate-950 animate-gradient pointer-events-none -z-10"></div>
    <div class="fixed top-0 left-0 w-full h-full bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-5 pointer-events-none -z-10"></div>

    <div class="max-w-7xl mx-auto space-y-8">
        
        <div class="glass-card rounded-2xl p-6 flex flex-col md:flex-row justify-between items-center gap-4 reveal">
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-full bg-gradient-to-tr from-cyan-500 to-blue-600 flex items-center justify-center font-bold text-white shadow-lg shadow-cyan-500/20">
                    A
                </div>
                <div>
                    <h1 class="text-2xl font-bold text-white">Admin Command Center</h1>
                    <p class="text-xs text-cyan-400 uppercase tracking-widest">Overview & Controls</p>
                </div>
            </div>
            <a href="/admin/logout" class="group flex items-center gap-2 px-6 py-2.5 rounded-xl bg-red-500/10 border border-red-500/20 text-red-400 hover:bg-red-500 hover:text-white transition-all duration-300">
                <span>Log Out</span>
                <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path></svg>
            </a>
        </div>

        <div class="grid lg:grid-cols-2 gap-8">
            
            <div class="glass-card p-8 rounded-3xl reveal" style="transition-delay: 100ms;">
                <h2 class="text-xl font-bold mb-6 flex items-center gap-3 text-white border-b border-white/10 pb-4">
                    <span class="text-cyan-400">‚ö°</span> Manage Services
                </h2>

                <form action="/admin/service" method="POST" class="mb-8 p-6 bg-white/5 rounded-2xl border border-white/5 shadow-inner">
                    <h3 class="text-xs font-bold text-cyan-400 mb-4 uppercase tracking-wider flex items-center gap-2">
                        <span class="bg-cyan-500/20 w-5 h-5 flex items-center justify-center rounded text-cyan-300">+</span> 
                        Add New Service
                    </h3>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                        <input type="text" name="title" placeholder="Service Title" class="glass-input p-3 rounded-xl text-sm w-full" required>
                        <input type="text" name="category" placeholder="Category" class="glass-input p-3 rounded-xl text-sm w-full" required>
                    </div>
                    
                    <div class="grid grid-cols-3 gap-4 mb-4">
                        <input type="number" name="price" placeholder="Price (‚Çπ)" class="glass-input p-3 rounded-xl text-sm w-full" required>
                        <input type="text" name="duration" placeholder="Duration" class="glass-input p-3 rounded-xl text-sm w-full" required>
                        <input type="text" name="imageURL" placeholder="Image URL" class="glass-input p-3 rounded-xl text-sm w-full" required>
                    </div>
                    
                    <button class="w-full bg-gradient-to-r from-cyan-600 to-blue-600 hover:from-cyan-500 hover:to-blue-500 text-white py-3 rounded-xl font-bold text-sm shadow-lg shadow-cyan-900/20 transition-all transform hover:-translate-y-0.5">
                        + Create Service
                    </button>
                </form>

                <div class="space-y-4 max-h-[400px] overflow-y-auto pr-2">
                    <h3 class="text-xs font-bold text-slate-500 uppercase tracking-wider mb-2 sticky top-0 bg-[#0f141f] py-2 z-10">Existing Services</h3>
                    <% services.forEach(service => { %>
                        <div class="group flex gap-4 items-end bg-white/5 p-4 rounded-xl border border-white/5 hover:border-cyan-500/30 transition-colors">
                            <form action="/admin/service/update/<%= service._id %>" method="POST" class="flex-grow flex gap-4 items-end">
                                <div class="flex-grow">
                                    <label class="text-sm font-bold text-white group-hover:text-cyan-300 transition-colors"><%= service.title %></label>
                                    <div class="flex gap-2 mt-2">
                                        <div class="relative w-1/2">
                                            <span class="absolute left-3 top-2.5 text-slate-500 text-xs">‚Çπ</span>
                                            <input type="number" name="price" value="<%= service.price %>" class="glass-input pl-6 p-2 rounded-lg text-xs w-full">
                                        </div>
                                        <div class="relative w-1/2">
                                            <input type="number" name="discountPercent" value="<%= service.discountPercent %>" class="glass-input p-2 rounded-lg text-xs w-full" placeholder="%">
                                            <span class="absolute right-3 top-2.5 text-slate-500 text-xs">%</span>
                                        </div>
                                    </div>
                                </div>
                                <button class="bg-cyan-900/50 text-cyan-300 border border-cyan-500/20 px-4 py-2 rounded-lg font-bold text-xs hover:bg-cyan-500 hover:text-white transition h-9">Save</button>
                            </form>
                            <a href="/admin/service/delete/<%= service._id %>" class="bg-red-500/10 text-red-400 border border-red-500/20 w-9 h-9 flex items-center justify-center rounded-lg hover:bg-red-500 hover:text-white transition" onclick="return confirm('Delete this service permanently?')">
                                ‚úï
                            </a>
                        </div>
                    <% }) %>
                </div>
            </div>

            <div class="glass-card p-8 rounded-3xl reveal" style="transition-delay: 200ms;">
                <h2 class="text-xl font-bold mb-6 flex items-center gap-3 text-white border-b border-white/10 pb-4">
                    <span class="text-cyan-400">üìù</span> Publish Content
                </h2>
                <form action="/admin/blog/add" method="POST" enctype="multipart/form-data" class="space-y-5">
                    <input type="text" name="title" placeholder="Article Title" class="glass-input p-4 rounded-xl w-full text-white placeholder-slate-500" required>
                    
                    <div class="bg-white/5 p-4 rounded-xl border border-white/10 border-dashed hover:border-cyan-500/50 transition">
                        <label class="block text-xs font-bold text-cyan-400 mb-2 uppercase tracking-wide">Cover Image</label>
                        <input type="file" name="image" class="w-full text-sm text-slate-400 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-xs file:font-bold file:bg-cyan-500/10 file:text-cyan-400 hover:file:bg-cyan-500/20 transition" accept="image/*" required>
                    </div>
                    
                    <textarea name="content" placeholder="Write your content here..." rows="6" class="glass-input p-4 rounded-xl w-full text-white placeholder-slate-500 resize-none" required></textarea>
                    
                    <button class="w-full bg-gradient-to-r from-cyan-600 to-blue-600 hover:from-cyan-500 hover:to-blue-500 text-white py-3 rounded-xl font-bold shadow-lg shadow-blue-900/20 transition-all transform hover:-translate-y-0.5">
                        Publish Article
                    </button>
                </form>
            </div>

            <div class="glass-card p-8 rounded-3xl lg:col-span-2 reveal" style="transition-delay: 300ms;">
                <h2 class="text-xl font-bold mb-6 flex items-center gap-3 text-white border-b border-white/10 pb-4">
                    <span class="text-cyan-400">üìÖ</span> Manage Schedule
                </h2>
                
                <form action="/admin/schedule/update" method="POST" class="bg-white/5 p-6 rounded-2xl border border-white/10">
                    <div class="flex flex-col md:flex-row gap-6 items-end mb-8 border-b border-white/5 pb-8">
                        <div class="w-full md:w-1/3">
                            <label class="block text-xs font-bold text-cyan-400 uppercase tracking-widest mb-2">Select Date</label>
                            <input type="date" name="date" required class="glass-input p-3 rounded-xl w-full">
                        </div>
                        <div class="w-full md:w-1/3">
                            <label class="flex items-center gap-3 cursor-pointer bg-red-500/10 border border-red-500/20 p-3 rounded-xl hover:bg-red-500/20 transition group">
                                <input type="checkbox" name="isBlocked" value="true" class="w-5 h-5 accent-red-500 bg-transparent border-red-500">
                                <span class="font-bold text-red-400 group-hover:text-red-300 transition">Block Entire Date</span>
                            </label>
                        </div>
                        <div class="w-full md:w-1/3">
                            <button type="submit" class="w-full bg-white text-slate-900 font-bold py-3 px-6 rounded-xl hover:bg-cyan-50 transition shadow-lg shadow-white/5">
                                Update Settings
                            </button>
                        </div>
                    </div>
                    
                    <h3 class="text-xs font-bold text-slate-500 uppercase tracking-widest mb-4">Slot Configuration</h3>
                    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-9 gap-3">
                        <% const slots = ["09:00 AM", "10:00 AM", "11:00 AM", "12:00 PM", "02:00 PM", "03:00 PM", "04:00 PM", "05:00 PM", "06:00 PM"];
                        slots.forEach(slot => { %>
                            <div class="bg-black/20 p-3 rounded-xl border border-white/5 text-center hover:border-cyan-500/30 transition group">
                                <p class="font-bold text-white text-xs mb-2 whitespace-nowrap"><%= slot %></p>
                                
                                <div class="flex gap-1 items-center justify-center mb-2">
                                    <span class="text-[10px] text-slate-500 font-bold">CAP</span>
                                    <input type="number" name="slotCapacities[<%= slot %>]" placeholder="5" class="w-8 bg-white/10 border border-white/10 rounded text-center text-xs p-1 text-white focus:border-cyan-500 outline-none">
                                </div>
                                
                                <label class="flex items-center justify-center gap-1 text-[10px] text-red-400 font-bold cursor-pointer hover:text-red-300">
                                    <input type="checkbox" name="disabledSlots[]" value="<%= slot %>" class="accent-red-500"> Disable
                                </label>
                            </div>
                        <% }) %>
                    </div>
                </form>
                <p class="text-xs text-slate-500 mt-4 italic text-center">* Select a date first. Changes apply only to that specific day.</p>
            </div>

            <div class="glass-card p-8 rounded-3xl lg:col-span-2 reveal" style="transition-delay: 400ms;">
                <h2 class="text-xl font-bold mb-6 flex items-center gap-3 text-white border-b border-white/10 pb-4">
                    <span class="text-cyan-400">üìö</span> Existing Articles
                </h2>
                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
                    <% if(posts && posts.length > 0) { %>
                        <% posts.forEach(post => { %>
                            <div class="flex items-center justify-between p-4 border border-white/5 rounded-2xl bg-white/5 hover:bg-white/10 transition group">
                                <div class="flex items-center gap-4">
                                    <img src="<%= post.imageURL %>" class="w-14 h-14 object-cover rounded-lg bg-slate-800">
                                    <div>
                                        <h4 class="font-bold text-white text-sm line-clamp-1 group-hover:text-cyan-300 transition"><%= post.title %></h4>
                                        <p class="text-xs text-slate-500 line-clamp-1 w-40"><%= post.body ? post.body.substring(0, 50) : 'No content' %>...</p>
                                    </div>
                                </div>
                                <a href="/admin/content/delete/<%= post._id %>" class="text-red-400 hover:bg-red-500/10 p-2 rounded-lg transition" onclick="return confirm('Delete this blog?')">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" /></svg>
                                </a>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <p class="text-slate-500 italic col-span-full text-center py-4">No blog posts found.</p>
                    <% } %>
                </div>
            </div>

            <div class="glass-card p-8 rounded-3xl lg:col-span-2 reveal" style="transition-delay: 500ms;">
                <h2 class="text-xl font-bold mb-6 flex items-center gap-3 text-white border-b border-white/10 pb-4">
                    <span class="text-cyan-400">üéüÔ∏è</span> Booking Requests
                </h2>
                <div class="overflow-x-auto rounded-xl border border-white/10">
                    <table class="w-full text-left border-collapse">
                        <thead class="bg-white/5 text-slate-400 text-xs uppercase tracking-wider">
                            <tr>
                                <th class="p-4 font-bold">Customer</th>
                                <th class="p-4 font-bold">Service</th>
                                <th class="p-4 font-bold">Date & Time</th>
                                <th class="p-4 font-bold">Status</th>
                                <th class="p-4 font-bold text-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-white/5 text-sm">
                            <% bookings.forEach(b => { %>
                                <tr class="hover:bg-white/5 transition duration-150">
                                    <td class="p-4">
                                        <div class="font-bold text-white"><%= b.customerName %></div>
                                        <div class="text-xs text-slate-500"><%= b.email %></div>
                                    </td>
                                    <td class="p-4 text-slate-300"><%= b.serviceTitle || (b.service ? b.service.title : 'N/A') %></td>
                                    <td class="p-4">
                                        <div class="font-medium text-white"><%= b.date ? new Date(b.date).toDateString() : 'N/A' %></div>
                                        <span class="text-xs text-cyan-400 font-mono bg-cyan-900/30 px-2 py-0.5 rounded border border-cyan-500/20"><%= b.timeSlot %></span>
                                    </td>
                                    <td class="p-4">
                                        <% let badgeClass = 'bg-yellow-500/10 text-yellow-500 border-yellow-500/20';
                                           if (b.status === 'Confirmed') badgeClass = 'bg-green-500/10 text-green-400 border-green-500/20';
                                           if (b.status === 'Cancelled') badgeClass = 'bg-red-500/10 text-red-400 border-red-500/20';
                                           if (b.status === 'Completed') badgeClass = 'bg-slate-500/10 text-slate-400 border-slate-500/20';
                                        %>
                                        <span class="px-3 py-1 rounded-full text-xs font-bold border <%= badgeClass %>"><%= b.status %></span>
                                    </td>
                                    <td class="p-4 text-right">
                                        <% if (b.status !== 'Completed') { %>
                                            <form action="/admin/booking/update/<%= b._id %>" method="POST" class="flex gap-2 justify-end">
                                                <% if (b.status !== 'Confirmed') { %>
                                                    <button name="status" value="Confirmed" class="text-green-400 hover:bg-green-500/10 px-3 py-1.5 rounded-lg transition font-bold text-xs border border-transparent hover:border-green-500/20">‚úì Confirm</button>
                                                <% } %>
                                                <% if (b.status !== 'Cancelled') { %>
                                                    <button name="status" value="Cancelled" class="text-red-400 hover:bg-red-500/10 px-3 py-1.5 rounded-lg transition font-bold text-xs border border-transparent hover:border-red-500/20">‚úï Cancel</button>
                                                <% } %>
                                            </form>
                                        <% } else { %>
                                            <span class="text-xs text-slate-600 italic">Archived</span>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="glass-card p-8 rounded-3xl lg:col-span-2 reveal" style="transition-delay: 600ms;">
                <h2 class="text-xl font-bold mb-6 flex items-center gap-3 text-white border-b border-white/10 pb-4">
                    <span class="text-cyan-400">üí¨</span> Customer Reviews
                </h2>
                <div class="grid md:grid-cols-2 gap-6">
                    <% if (testimonials && testimonials.length > 0) { %>
                        <% testimonials.forEach(t => { %>
                            <div class="p-6 rounded-2xl flex flex-col justify-between border transition-all <%= t.isApproved ? 'bg-white/5 border-white/10' : 'bg-yellow-900/10 border-yellow-500/30' %>">
                                <div>
                                    <div class="flex justify-between items-start mb-3">
                                        <div>
                                            <p class="font-bold text-white"><%= t.name %></p>
                                            <span class="text-xs text-slate-500"><%= t.createdAt ? t.createdAt.toLocaleDateString() : '' %></span>
                                        </div>
                                        <span class="text-yellow-400 text-sm tracking-widest bg-yellow-400/10 px-2 py-1 rounded-lg"><% for(let i=0; i<t.rating; i++) { %>‚òÖ<% } %></span>
                                    </div>
                                    <p class="text-sm text-slate-300 italic mb-4 leading-relaxed">"<%= t.feedback %>"</p>
                                    
                                    <form action="/admin/feedback/reply/<%= t._id %>" method="POST" class="mt-4 bg-black/20 p-4 rounded-xl border border-white/5">
                                        <label class="text-[10px] font-bold text-cyan-400 uppercase tracking-wider block mb-2">Admin Reply</label>
                                        <div class="flex gap-2">
                                            <input type="text" name="reply" value="<%= t.reply || '' %>" placeholder="Write a reply..." class="w-full text-xs bg-white/5 border border-white/10 rounded-lg p-2 text-white focus:border-cyan-500 outline-none">
                                            <button class="bg-cyan-500/10 text-cyan-400 border border-cyan-500/20 text-xs font-bold px-3 rounded-lg hover:bg-cyan-500 hover:text-white transition">Post</button>
                                        </div>
                                    </form>
                                </div>
                                
                                <div class="flex justify-between items-center border-t border-white/5 pt-4 mt-4">
                                    <span class="text-xs font-bold uppercase tracking-wider flex items-center gap-2 <%= t.isApproved ? 'text-green-400' : 'text-yellow-500' %>">
                                        <span class="w-2 h-2 rounded-full <%= t.isApproved ? 'bg-green-400 animate-pulse' : 'bg-yellow-500 animate-pulse' %>"></span>
                                        <%= t.isApproved ? 'Live' : 'Pending Approval' %>
                                    </span>
                                    <% if(!t.isApproved) { %>
                                        <form action="/admin/feedback/approve/<%= t._id %>" method="POST">
                                            <button class="bg-blue-600 text-white text-xs px-4 py-2 rounded-lg hover:bg-blue-500 font-bold transition shadow-lg shadow-blue-900/20">Approve Review</button>
                                        </form>
                                    <% } %>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <p class="text-slate-500 italic col-span-full text-center">No reviews found.</p>
                    <% } %>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    // Reveal Animation
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => { if (entry.isIntersecting) entry.target.classList.add('active'); });
    }, { threshold: 0.1 });
    document.querySelectorAll('.reveal').forEach(el => observer.observe(el));
</script>